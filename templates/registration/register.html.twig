{% extends 'base_dashboard.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="authentication">
    <div class="card">
        <div class="body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="header slideDown">
                        <div class="logo"><img src="assets/images/logo.png" alt="Sample Logo"></div>
                        <h1>Sample Admin</h1>
                    </div>                        
                </div>

                <div class="col-lg-12">
                {{ form_start(registrationForm) }}
                    <h5 class="title">Inscription</h5>

                    <div class="form-group form-float">
                            <div class="form-line">
                                {{ form_widget(registrationForm.NomComplet, {'attr': {'class':'form-control'}}) }}
                                <label class="form-label">Nom Complet</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                {{ form_widget(registrationForm.email, {'attr': {'class':'form-control'} }) }}
                                <label class="form-label">Adresse Email</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                {{form_widget(registrationForm.plainPassword, {'attr':{'class':'form-control'}})}}
                                <label class="form-label">Mot de passe</label>
                            </div>
                        </div>
                    
                        <div class="col-lg-12">                        
                            <button type="submit" class="btn btn-raised btn-primary waves-effect">Inscription</button>                        
                        </div>
                {{ form_end(registrationForm) }}                        
                </div>

                <div class="col-lg-12 m-t-20">
                    <a href="{{path('app_login')}}">Deja inscrit ?</a>
                </div>                    
            </div>
        </div>
    </div>
</div>
{% endblock %}
